{% extends 'single.html.twig' %}
{% block meta %}
    <!--  Essential META Tags -->

    <meta property="og:title" content="{{ article.title|title }}">
    <meta property="og:description" content="{{ article.text|file_excerpt(0)  }}">
    <meta property="og:image" content="{{ vich_uploader_asset(article, 'imageFile') }}">
    <meta property="og:url" content="{{ absolute_url('/') }}">
    <meta name="twitter:card" content="summary_large_image">


    <!--  Non-Essential, But Recommended -->

    <meta property="og:site_name" content="European Travel, Inc.">
    <meta name="twitter:image:alt" content="Alt text for image">


    <!--  Non-Essential, But Required for Analytics -->

    <meta property="fb:app_id" content="your_app_id" />
    <meta name="twitter:site" content="@website-username">

{% endblock %}
{% block single_body %}
    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="article-img-top" alt="...">
    <div class="card-title card-title-custom text-right">
        <h1 class="single-title">{{ article.title }}</h1>
        <span>{{ article.createdAt | date("d/m/Y") }}</span>
        <ul class="devicon-group">
            {% for tag in article.tags %}
                <li><a href="{{ path('app_emousseblog_singletag', { 'name' : tag.name }) }}" class="badge badge-light"><i
                                class="devicon-{{ tag.name | lower }}-plain colored"></i></a></li>
            {% endfor %}
        </ul>
    </div>

    <div data-spy="scroll" data-target="#list-example" data-offset="0" class="card-body">
        <p class="card-text">{{ article.text | raw }}</p>
    </div>
    <div class="card-footer text-muted">
        Last updated 3 mins ago
    </div>

{% endblock %}
