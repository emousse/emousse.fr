{% extends 'single.html.twig' %}
{% block meta %}
    <!-- Primary Meta Tags -->
    <meta name="title" content="{{ article.title|title }}">
    <meta name="description"
          content="{{ article.metaDescription }}">
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:title" content="{{ article.title|title }}">
    <meta property="og:description"
          content="{{ article.metaDescription }}">
    <meta property="og:image"
          content="{{ app.request.httpHost ~ vich_uploader_asset(article, 'imageFile') }}">
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ app.request.uri }}">
    <meta property="twitter:title" content="{{ article.title|title }}">
    <meta property="twitter:description"
          content="{{ article.metaDescription }}">
    <meta property="twitter:image"
          content="{{ app.request.httpHost ~ vich_uploader_asset(article, 'imageFile') }}">
{% endblock %}
{% block title %}{{ parent() }} - {{ article.title|title }}{% endblock %}
{% block single_body %}
    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="article-img-top" alt="...">
    <div class="card-title card-title-custom text-right">
        <h1 class="single-title">{{ article.title }}</h1>
        <span>{{ article.createdAt | date("d/m/Y") }}</span>
        <ul class="devicon-group">
            {% for tag in article.tags %}
                <li><a href="{{ path('app_emousseblog_singletag', { 'name' : tag.name }) }}" class="badge badge-light"><i
                                class="devicon-{{ tag.name | lower }}-plain colored"></i></a></li>
            {% endfor %}
        </ul>
    </div>

    <div data-spy="scroll" data-target="#list-example" data-offset="0" class="card-body">
        <p class="card-text">{{ article.text | raw }}</p>
    </div>
    <div class="card-footer text-muted">
        Last updated 3 mins ago
    </div>

{% endblock %}
