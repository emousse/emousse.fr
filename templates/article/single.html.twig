{% extends 'base.html.twig' %}
{% block body %}

    <article class="card mb-3 bg-dark">
        <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="article-img-top" alt="...">
        <div class="card-title card-title-custom text-center">
            <h1>{{ article.title }}</h1>
            <span>{{ article.createdAt | date("d/m/Y") }}</span>
        </div>

        <ul class="devicon-group">
            {% for tag in article.tags %}
                <li><a href="#" class="badge badge-light"><i
                                class="devicon-{{ tag.name | lower }}-plain colored"></i></a></li>
            {% endfor %}
        </ul>

        <div data-spy="scroll" data-target="#list-example" data-offset="0" class="card-body">
            <p class="card-text">{{ article.text | raw }}</p>
            <p class="card-text">
                <small class="text-muted">Last updated 3 mins ago</small>
            </p>
        </div>

    </article>
    <div class="fixed-bottom bg-black">
        <div class="progress-container">
            <div class="progress-bar" id="myBar"></div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/generateSummary.js') }}"></script>
{% endblock %}