{% extends 'base.html.twig' %}
{% block body %}
    {% for article in pagination %}
        <div class="card mb-3 bg-dark">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <p class="card-text"><small class="text-muted">{{ article.createdAt | date("d/m/Y") }}</small></p>
                        <a href="{{ path('app_emousseblog_singlearticle', { 'slug' : article.slug }) }}" class="btn btn-black">Read</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    {{ knp_pagination_render(pagination) }}
{% endblock %}